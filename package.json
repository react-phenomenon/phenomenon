{
  "private": true,
  "author": "Kacper Kozak",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "scripts": {
    "lint": "eslint  --ext .ts,.tsx,.js packages/*/src/",
    "prettier-check": "prettier --check 'packages/*/src/**/*.{ts,tsx}'",
    "typecheck": "yarn workspace @phenomenon/slides typecheck && yarn workspace @phenomenon/example typecheck"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "browserslist": [
    "> 2%",
    "not dead"
  ],
  "dependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "devDependencies": {
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "husky": ">=3.0.8",
    "lint-staged": ">=9.4.1",
    "prettier": "^1.17.0",
    "typescript": "^3.5.1"
  }
}
